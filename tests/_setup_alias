set -o pipefail
outfile=$(mktemp)

error() {
    echo "FAILURE"
    echo "$1"
    echo "sleeping 3"
    sleep 3
    exit 255
}

[ -z "$calendar_cli" ] && [ -x ./calendar-cli.py ] && calendar_cli=./calendar-cli.py
[ -z "$calendar_cli" ] && [ -x ../calendar-cli.py ] && calendar_cli=../calendar-cli.py
[ -z "$calendar_cli" ] && error "couldn't find ./calendar_cli.py nor ../calendar_cli.py"

calendar_cli() {
    echo "    $calendar_cli $*"
    output=$($calendar_cli "$@" | tee $outfile)
    [ -z "$output" ] || [ -z "$QUIET" ] || echo $output
}

# vim: ft=sh
